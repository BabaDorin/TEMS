@model LoggedOutViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TEMS - Logged Out</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-4 text-center">
                        <h2 class="mb-4">Logged Out</h2>
                        <p>You have successfully logged out.</p>
                        
                        @if (Model.PostLogoutRedirectUri != null)
                        {
                            <p>
                                <a href="@Model.PostLogoutRedirectUri" class="btn btn-primary">Return to Application</a>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.AutomaticRedirectAfterSignOut && Model.PostLogoutRedirectUri != null)
    {
        <script>
            window.location.href = '@Model.PostLogoutRedirectUri';
        </script>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" style="display:none" src="@Model.SignOutIframeUrl"></iframe>
    }
</body>
</html>
