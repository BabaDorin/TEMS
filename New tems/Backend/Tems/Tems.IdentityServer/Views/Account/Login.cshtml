@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TEMS - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">TEMS Login</h2>
                        
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }

                        <form asp-route="Login" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Enter username" autofocus />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input asp-for="RememberLogin" type="checkbox" class="form-check-input" />
                                <label asp-for="RememberLogin" class="form-check-label">Remember Me</label>
                            </div>

                            <button type="submit" name="button" value="login" class="btn btn-primary w-100">Login</button>
                            
                            @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                            {
                                <button type="submit" name="button" value="cancel" class="btn btn-secondary w-100 mt-2">Cancel</button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
